def role_required(*roles):
    def decorator(f):
        @wraps(f)
        def wrapper(*args, **kwargs):
            if session.get("ruolo") not in roles:
                flash("Accesso non autorizzato", "warning")
                return redirect(url_for("index"))
            return f(*args, **kwargs)
        return wrapper
    return decorator


app = Flask(__name__)

